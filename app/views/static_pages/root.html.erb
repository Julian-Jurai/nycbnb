
<!-- root.html.erb -->

<script type="text/javascript">
  <% if logged_in? %>
    window.currentUser = <%= render(
      "api/users/user.json.jbuilder",
      user: current_user
    ).html_safe %>
  <% end %>
</script>

<script type="text/javascript">
  window.images = {
    logo: "<%= image_path('logo.png') %>",
    avatar: "<%= image_path('user_pic.png')  %>",
    loading: "<%= image_path('loading.gif')  %>"
  }
</script>

<main id="root"></main>
